@model Farmalivio_Farmacia.Models.cliente

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutFarmalivio.cshtml";
}

<div class="box-header with-border">
    <h3 class="box-title">Clientes</h3>
    <div class="box-tools pull-right">
        <button class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
        <button class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
    </div>
</div>

<div class="box-body">
    <div class="row">
        <div class="col-md-12">
            <main class="main">
                <div class="container-fluid">
                    <!-- Ejemplo de tabla Listado -->
                    <div class="card">
                        <div class="card-body">
                            <div class="box-header bg-gray-light text-black">
                                <div class="box-title">
                                    <i class="fa fa-align-justify"></i> Medida<!--Nombre del catalogo actual -->
                                    <a href="@Url.Action("index", "Clientes")" class="btn btn-primary"><i class="fa fa-reply "></i>&nbsp;Atras</a>
                                </div>
                            </div><br />
                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()

                                <div class="row">

                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    @Html.HiddenFor(model => model.id_cliente)

                                    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.nombre_cliente, htmlAttributes: new { @class = "control-label" })
                                            @Html.EditorFor(model => model.nombre_cliente, new { htmlAttributes = new { @class = "form-control" } })
                                            <div class="row">
                                                <div class="col-md-1 col-sm-1 col-xs-1">
                                                    <span class="text-white">(*)</span>
                                                </div>
                                                <div class="col-md-11 col-sm-11 col-xs-11">
                                                    @Html.ValidationMessageFor(model => model.nombre_cliente, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.apellido_cliente, htmlAttributes: new { @class = "control-label" })
                                            @Html.EditorFor(model => model.apellido_cliente, new { htmlAttributes = new { @class = "form-control" } })
                                            <div class="row">
                                                <div class="col-md-1 col-sm-1 col-xs-1">
                                                    <span class="text-white">(*)</span>
                                                </div>
                                                <div class="col-md-11 col-sm-11 col-xs-11">
                                                    @Html.ValidationMessageFor(model => model.apellido_cliente, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.direccion, htmlAttributes: new { @class = "control-label" })
                                            @Html.EditorFor(model => model.direccion, new { htmlAttributes = new { @class = "form-control" } })
                                            <div class="row">
                                                <div class="col-md-1 col-sm-1 col-xs-1">
                                                    <span class="text-white">(*)</span>
                                                </div>
                                                <div class="col-md-11 col-sm-11 col-xs-11">
                                                    @Html.ValidationMessageFor(model => model.direccion, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.cedula, htmlAttributes: new { @class = "control-label" })
                                            @Html.EditorFor(model => model.cedula, new { htmlAttributes = new { @class = "form-control" } })
                                            <div class="row">
                                                <div class="col-md-1 col-sm-1 col-xs-1">
                                                    <span class="text-white">(*)</span>
                                                </div>
                                                <div class="col-md-11 col-sm-11 col-xs-11">
                                                    @Html.ValidationMessageFor(model => model.cedula, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    @Html.ValidationMessage("errorCliente", new { @class = "label label-danger", id = "Cliente-validacion" })
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i>&nbsp;Actualizar</button>
                                </div>
                            }


                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>
</div>
